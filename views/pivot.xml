<odoo>

    <record model="ir.ui.view" id="action_project_task_details_tree">
        <field name="name">action.project.task.details.tree</field>
        <field name="model">project.task.details</field>
        <field name="arch" type="xml">
            <tree string="Project Task" create="false">
                <field name='project'/>
                <field name='partner'/>
                <field name='date_deadline'/>
            </tree>
        </field>
    </record>

      <record model="ir.ui.view" id="action_project_task_details_pivot">
        <field name="name">action.project.task.details.pivot</field>
        <field name="model">project.task.details</field>
        <field name="arch" type="xml">
            <pivot string="Project Task">
                <field name='project'/>
                <field name='partner'/>
                <field name='date_deadline'/>
            </pivot>
        </field>
    </record>

    <record model="ir.ui.view" id="action_project_task_details_from">
        <field name="name">action.project.task.details.from</field>
        <field name="model">project.task.details</field>
        <field name="arch" type="xml">
            <form string="Project Task" create="false">
                <sheet>
                    <group>
                        <field name='project'/>
                        <field name='partner'/>
                    </group>
                    <group>
                         <field name='date_deadline'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_task_details_view" model="ir.actions.act_window">
        <field name="name">Project task</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.task.details</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="view_id" eval="False"/>
    </record>

    <menuitem name="Project Task Details" action="restaurant_project.action_project_task_details_view" id="menu_project_task_details_action" parent="restaurant_project.rest_staff_submenu" sequence="4"/>
</odoo>